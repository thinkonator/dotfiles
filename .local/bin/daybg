#!/bin/sh
bgloc="$HOME/.local/share/bg"
bgdir="$HOME/pics/wallpapers"

case "$(date '+%A')" in
    Sunday)    c=orange       ;;
    Monday)    c=yellow       ;;
    Tuesday)   c=green-pink   ;;
    Wednesday) c=blue         ;;
    Thursday)  c=indigo       ;;
    Friday)    c=purple-white ;;
    Saturday)  c=red          ;;
    *)
        echo "Make sure locale is set to EN, then try again"; exit 1 ;;
esac

case "$(file "$bgloc")" in *$c*) setbg -s "$bgloc"; exit 0 ;; esac

setbg -s "$bgdir/$c"
